{
  "name": "psychopompcomics.com",
  "version": "1.0.0",
  "author": "Caleb Nelson, Scott St. John",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/calebn/psychopompcomics.git"
  },
  "main": "index.js",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "jest --",
    "test-watch": "jest --watch",
    "coverage": "jest --collectCoverage --",
    "lint": "next lint",
    "doc-up": "docker-compose up -d --remove-orphans",
    "doc-dev": "docker-compose up -d --build --remove-orphans",
    "doc-down": "docker-compose down",
    "doc-build": "docker-compose build",
    "doc-build-psy": "docker-compose build psychopompcomics",
    "doc-build-nginx": "docker-compose build nginx",
    "prepare": "husky install"
  },
  "babel": {
    "presets": ["next/babel"],
    "plugins": [["styled-components", { "ssr": true }]]
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown"
  },
  "eslintConfig": {
    "extends": ["next/core-web-vitals", "prettier"],
    "rules": {
      "react/self-closing-comp": ["error"]
    }
  },
  "prettier": {
    "endOfLine": "lf",
    "printWidth": 80,
    "trailingComma": "es5",
    "semi": true,
    "jsxSingleQuote": true,
    "singleQuote": true,
    "useTabs": true,
    "tabWidth": 2,
    "arrowParens": "always"
  },
  "dependencies": {
    "html-entities": "^2.3.2",
    "next": "^12.0.8",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-is": "^17.0.2",
    "react-mailchimp-subscribe": "^2.1.3",
    "styled-components": "^5.2.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^5.16.1",
    "@testing-library/react": "^12.1.2",
    "babel-plugin-styled-components": "^1.12.0",
    "eslint": "^8.6.0",
    "eslint-config-next": "12.0.8",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.5",
    "jest-css-modules": "^2.1.0",
    "lint-staged": "^12.1.7",
    "prettier": "^2.5.1",
    "prettier-eslint": "^13.0.0",
    "react-test-renderer": "^17.0.2"
  }
}
